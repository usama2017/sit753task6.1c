pipeline { 
    agent any

    environment {
        DIRECTORY_PATH = "C:/Users/Usama/OneDrive/Desktop/SIT753"
        TESTING_ENVIRONMENT = "pipeline-testing-environment"
        PRODUCTION_ENVIRONMENT = "production-environment"  // Set appropriate value for production environment
    }

    stages { 
        stage('Build') {
            steps {
                echo "Fetching the source code from ${env.DIRECTORY_PATH}" 
                echo "Compiling the code and generating any necessary artifacts"
            }
        }

        stage('Test') { 
            steps {
                echo "Running unit tests"
                echo "Running integration tests"
            }
        }

        stage('Code Quality Check') { 
            steps {
                echo "Checking the quality of the code"
            }
        }

        stage('Deploy to Testing Environment') { 
            steps {
                echo "Deploying the application to ${env.TESTING_ENVIRONMENT}"
            }
        }

        stage('Approval') { 
            steps {
                echo "Simulating manual approval"
                sleep 10  // Simulate manual intervention
            }
        }

        stage('Deploy to Production') { 
            steps {
                echo "Deploying the code to ${env.PRODUCTION_ENVIRONMENT}"
            }
        }
    }
}
